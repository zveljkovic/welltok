{
  "apps" : [{
    "name": "WelltokDev",
    "autorestart": true,
    "env": {
      "NODE_ENV": "dev"
    },
    "kill_timeout": 300,
    "exec_mode": "fork",
    "instance_var": "INSTANCE_ID",
    "instances": 1,
    "max_memory_restart": "1G",
    "max_restarts": 1,
    "min_uptime": 10000,
    "node_args": ["--inspect=0.0.0.0:9229", "--harmony"],
    "script": "src/index.js",
    "watch": ["./src/**/*.js"],
    "ignore_watch": ["node_modules", "dev_node_modules"],
    "watch_options": {
      "persistent": true,
      "ignoreInitial": true,
      "usePolling": true,
      "alwaysStat": true
    }
  }]
}
